<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="@color/colorAccent">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:id="@+id/webView"
        android:background="#000000"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-9dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/LedBtn"
            android:src="@drawable/led_off"
            android:background="#00000000"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/FeedBtn"
            android:src="@drawable/feed_on"
            android:background="#00000000"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/ScreenShotBtn"
            android:src="@drawable/camera02"
            android:background="#00000000"
            android:layout_weight="1" />


    </LinearLayout>





















































    

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp" >

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/BookLed"
            android:src="@drawable/led_time"
            android:background="#00000000"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/BookFeed"
            android:src="@drawable/feed_time"
            android:background="#00000000"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/ChangePW"
            android:src="@drawable/set"
            android:background="#00000000"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="101dp"
        android:layout_marginTop="10dp" >

    </LinearLayout>

</LinearLayout>